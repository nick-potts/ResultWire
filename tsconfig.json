{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**.d.ts", "**/**.spec.ts"],
  "compilerOptions": {
    "target": "ES2015" ,
    "module": "CommonJS" ,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true,
  }
}
